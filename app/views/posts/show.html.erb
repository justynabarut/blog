<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Published:</strong>
  <%= @post.published %>
</p>

<p>
  <strong>Datetime:</strong>
  <%= @post.published_at %>
</p>

<hr>

<p>
  <strong>Comments:</strong>
</p>

<div>
  <% @comments.each do |comment| %>
    <p>
      <%= comment.name %>
      <%= comment.text %>
      <%= comment.date %>
    </p>

  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
