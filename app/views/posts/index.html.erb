<p id="notice"><%= notice %></p>

<section>
  <h2>Recent Posts</h2>
<!-- Chciałabym tu posegregować posty ze znacznikami -->
  <%= link_to 'Climbing', class: 'button' %>
  <%= link_to 'Skitouring', class: 'button' %>

<table>
  <thead>
    <tr>
      <th><%= Post.human_attribute_name :name %></th>
      <th><%= Post.human_attribute_name :title %></th>
      <th><%= Post.human_attribute_name :body %></th>
      <th><%= Post.human_attribute_name :published %></th>
      <th><%= Post.human_attribute_name :published_at %></th>
      <th colspan="3"><%= t '.more' %></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td><%= post.published_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'button' %>

